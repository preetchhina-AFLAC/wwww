if not postsDF.empty:
            for _, row in postsDF.iterrows():
                with st.container():
                    st.markdown(f"**{row['user']}** ({row['role']}) ğŸ•’ {row['timestamp']}")
                    st.write(row["content"])

                    # Like / Dislike Buttons
                    col_like, col_dislike, col_delete = st.columns([1, 1, 1])
                    
                    with col_like:
                        if st.button(f"ğŸ‘ {row['likes']}", key=f"like_{row['id']}"):
                            updateLikes(row['id'], like=True)
                            st.rerun()

                    with col_dislike:
                        if st.button(f"ğŸ‘ {row['dislikes']}", key=f"dislike_{row['id']}"):
                            updateLikes(row['id'], like=False)
                            st.rerun()

                    # Admin Delete Button
                    with col_delete:
                        if st.button("ğŸ—‘ï¸ Delete", key=f"delete_{row['id']}"):
                            deletePost(row['id'])
                            st.warning("Message deleted!")
                            st.rerun()

                    st.markdown("---")
        else:
            st.write("No messages found.")
